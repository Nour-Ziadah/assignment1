<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF8F3">

    <TextView
        android:id="@+id/txtHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="10dp"
        android:text="Recommendations"
        android:textColor="#A3B18A"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="11dp"
        android:text="Select your skin type and get product recommendations for your skincare routine!"
        android:textAlignment="center"
        android:textColor="#4F4E4E"
        android:textSize="19sp"
        android:textStyle="italic"
         />


    <Spinner
        android:id="@+id/spinnerSkinType"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background"
        android:textAlignment="center"
        android:layout_gravity="center"
        />


    <Button
        android:id="@+id/btnGetRecommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="#A3B18A"
        android:gravity="center"
        android:minWidth="150dp"
        android:text="Get"
        android:textSize="20sp"
        android:textStyle="bold"
         />


    <LinearLayout
        android:id="@+id/recommendationsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundedrectangle"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/txtCleanserRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Cleanser Recommendation"
            android:textColor="#FFF8F3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtMoisturizerRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Cleanser Recommendation"
            android:textColor="#FFF8F3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSunscreenRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Cleanser Recommendation"
            android:textColor="#FFF8F3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>
